{
    "tasks": [
        {
            "type": "shell",
            "label": "CP: Run and Compare",
            "command": "g++ -g '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' && '${fileDirname}/${fileBasenameNoExtension}' < '${fileDirname}/input.txt' > '${fileDirname}/output.txt' && code --diff '${fileDirname}/output.txt' '${fileDirname}/expected.txt'",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ],
    "version": "2.0.0"
}